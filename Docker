FROM python:3.10.14

WORKDIR /Intern/

# Install pip requirements
COPY requirements02.txt /Intern/
RUN pip install -r /requirements02.txt

# Copy Python script and other necessary files
COPY result01.py /Intern/
COPY interpolatedca.csv /Intern/
COPY interpolatedgl.csv /Intern/
COPY interpolatedHb.csv /Intern/

COPY RandomForest_ModelCa.joblib /Intern/ 
COPY RandomForest_ModelGl.joblib /Intern/
COPY RandomForest_ModelHb.joblib /Intern/

COPY result.html /Intern/

EXPOSE 5000

# Specify the entry point for the container
ENTRYPOINT ["python", "./result.py"]
